<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include layout="@layout/view_title"/>

    <LinearLayout
        android:id="@+id/search_group"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_search_input"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:hint="@string/search_at_name"
            android:imeActionLabel="@string/search"
            android:imeOptions="actionSearch"
            android:paddingLeft="13dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="@color/gray1"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/btn_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:src="@mipmap/icon_search_clear"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="@string/my_following"
                android:textColor="@color/gray3"
                android:textSize="13sp"
                android:visibility="gone"
                />

            <com.Tata.video.custom.RefreshView
                android:id="@+id/refreshView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                app:enableLoadMore="true"
                app:enableRefresh="false"
                />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:paddingTop="8dp"
            android:visibility="invisible"
            >

            <com.Tata.video.custom.RefreshView
                android:id="@+id/refreshView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:enableLoadMore="true"
                app:enableRefresh="false"
                />

        </FrameLayout>
    </FrameLayout>

</LinearLayout>