<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:layout_behavior=".adapter.WhlBehavior">
            <RelativeLayout
                android:id="@+id/top_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >

                <ImageView
                    android:id="@+id/top_group_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bg_user"
                    />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="70dp"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    />

                <LinearLayout
                    android:id="@+id/group_self"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/avatar"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        >

                        <ImageView
                            android:id="@+id/btn_zan_money"
                            android:layout_width="26dp"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:background="@color/black3"
                            android:padding="4dp"
                            android:src="@mipmap/icon_user_zan_money"
                            />




                        <ImageView
                            android:id="@+id/btn_setting"
                            android:layout_width="26dp"
                            android:layout_height="match_parent"
                            android:background="@color/black3"
                            android:padding="4dp"
                            android:src="@mipmap/icon_user_setting"
                            />



                        <ImageView

                            android:id="@+id/btn_edit_profile"
                            android:layout_width="26dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"

                            android:background="@color/black3"
                            android:padding="4dp"
                            android:src="@mipmap/icon_user_edit_profile"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_wallet"
                        android:layout_width="80dp"
                        android:layout_height="28dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="15dp"
                        android:visibility="gone"
                        android:background="@drawable/bg_user_btn"
                        >

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:src="@mipmap/icon_user_wallet"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/wallet"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/group_other"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/avatar"
                    android:layout_marginRight="20dp"
                    android:visibility="invisible"
                    >

                    <LinearLayout
                        android:id="@+id/btn_private_msg"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_user_btn"
                        >

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:padding="3dp"
                            android:src="@mipmap/icon_user_msg"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/private_msg"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_add_follow"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_user_add_follow"
                        android:gravity="center"
                        android:text="@string/add_follow"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/btn_following"
                        android:layout_width="38dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_user_btn"
                        android:padding="3dp"
                        android:src="@mipmap/icon_user_following"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/avatar"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/id_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginLeft="20dp"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/invite_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_val"
                    android:layout_marginLeft="20dp"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/my_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/invite_code"
                    android:layout_marginLeft="20dp"
                    android:textColor="#fff"
                    android:textSize="16sp"

                    />
                <Button
                    android:layout_marginLeft="18dp"
                    android:layout_below="@+id/my_money"
                    android:id="@+id/btn_wx_tixian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信提现"
                    />
                <Button
                    android:layout_marginLeft="20dp"
                    android:id="@+id/btn_zhifuba_tixian"
                    android:text="支付宝提现"
                    android:layout_toRightOf="@+id/btn_wx_tixian"
                    android:layout_below="@+id/my_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <View
                    android:id="@+id/line"
                    style="@style/line"
                    android:layout_below="@id/btn_wx_tixian"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/sign_hint2"
                    android:textColor="@color/gray2"
                    android:textColorHint="@color/gray2"
                    android:textSize="13sp"
                    />

                <LinearLayout
                    android:id="@+id/group_1"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_below="@id/sign"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/bg_user_btn_2"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/gray2"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_user_btn_2"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/gray2"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_user_btn_2"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/gray2"
                        android:textColorHint="@color/gray2"
                        android:textSize="13sp"
                        />
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/group_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/group_1"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    >
                    <TextView
                        android:id="@+id/zan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />


                </LinearLayout>

                <RelativeLayout

                    android:id="@+id/btn_share"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/group_2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_share_group"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/share_coin_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textColor="#BDBBBF"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:text="@string/立即邀请"
                        android:textColor="#ea377f"
                        android:textSize="14sp"
                        />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

                <com.Tata.video.custom.ViewPagerIndicator
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:id="@+id/indicator"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="7dp"
                    app:indicatorHeight="2dp"
                    app:indicatorWidth="30dp"
                    app:lightColor="#fff"
                    app:normalColor="#73737A"
                    app:title_textSize="15sp"
                    />
            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />
    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="65dp">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:alpha="0"
            android:background="@color/background"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:padding="7dp"
            android:src="@mipmap/icon_back"
            />

        <ImageView
            android:id="@+id/btn_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:padding="7dp"
            android:src="@mipmap/icon_more"
            android:visibility="invisible"
            />
    </RelativeLayout>

</RelativeLayout>
